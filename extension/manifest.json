{
  "manifest_version": 3,
  "name": "Crossclimb Solver",
  "version": "2.0.2",
  "description": "Automatically solves LinkedIn Crossclimb puzzles. Answer data sourced from crossclimbanswer.io. Not affiliated with LinkedIn.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://crossclimbanswer.io/*",
    "https://www.linkedin.com/games/crossclimb/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/games/crossclimb*",
        "https://www.linkedin.com/games-embed/*",
        "https://www.linkedin.com/games/*"
      ],
      "js": [
        "content/dom-helpers.js",
        "content/answer-parser.js",
        "content/dom-inspector.js",
        "content/solver.js",
        "content/overlay.js",
        "content/main.js"
      ],
      "css": [
        "content/overlay.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/page-bridge.js"],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Crossclimb Solver"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
